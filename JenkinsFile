pipeline {
  agent any

  stages {
    stage('Checkout') {
      steps {
        checkout scm
      }
    }

    stage('Build & Push Docker Image') {
      steps {
        withCredentials([usernamePassword(credentialsId: 'dockerhub-username-id', usernameVariable: 'DOCKER_HUB_USERNAME', passwordVariable: 'DOCKER_HUB_PASSWORD')]) {
          sh './build.sh'
        }
      }
    }

    stage('Deploy Application') {
      steps {
        sh './deploy.sh'
      }
    }
  }

  triggers {
    githubPush()
  }
}
