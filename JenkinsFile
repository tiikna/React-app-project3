pipeline {
  agent any
  stages {
    stage('Checkout') {
      steps {
        checkout scm
      }
    }
    stage('Prepare Scripts') {
      steps {
        sh 'chmod +x build.sh deploy.sh'
      }
    }
    stage('Install and Build React App') {
      steps {
        sh 'npm install'
        sh 'npm run build'
      }
    }

    stage('Build & Push Docker Image') {
      steps {
        script {
          sh """
            export BRANCH_NAME=${env.BRANCH_NAME ?: 'dev'}
            ./build.sh
          """
        }
      }
    }
    stage('Deploy Application') {
      steps {
        dir("${env.WORKSPACE}") {
          sh './deploy.sh'
        }
      }
    }
  }
  triggers {
    githubPush()
  }
}
